{
  "version": "2.4.2",
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true    
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}